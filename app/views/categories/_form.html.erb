<div class="container my-4">
  <div class="card">
    <div class="card-header">
      <h5><%= category.new_record? ? "Criar categoria" : "Editar categoria" %></h5>
    </div>
    <div class="card-body">
      <%= form_with(model: category, 
                    url: category.persisted? ? category_path(category, locale: I18n.locale) : 
                    categories_path(locale: I18n.locale), local: true) do |form| %>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_field :description, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :parent_id, "Categoria Pai", class: "form-label" %>
          <%= form.collection_select :parent_id, Category.all, :id, :description, { include_blank: true }, { class: "form-select" } %>
        </div>

        <div class="card-footer d-flex justify-content-between">
          <%= form.submit "Salvar categoria" %>
          <%= link_to "Voltar", categories_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
