<div id="categories" class="categories-table">
  <h2><%= t('lists.list_of_categories') %></h2>
  <%= form_with url: categories_path, method: :get, class: "mb-3", local: true do |f| %>
    <div class="row">
      <div class="col-md-3">
        <%= f.label :description, "Descrição", class: "form-label" %>
        <%= f.text_field :description, class: "form-control", value: params[:description] %>
      </div>
      <div class="col-md-3">
        <%= f.label :parent_id, "Categoria Pai", class: "form-label" %>
        <%= f.select :parent_id, options_from_collection_for_select(@parent_categories, :id, :description, params[:parent_id]), 
                    { include_blank: "Selecione uma categoria" }, class: "form-select" %>
      </div>
      <div class="col-md-3 align-self-end">
        <%= f.submit "Buscar", class: "btn btn-sm btn-primary" %>
        <%= link_to "Limpar", categories_path, class: "btn btn-sm btn-secondary" %>
      </div>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Descrição</th>
        <th>Categoria Pai</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.description %></td>
          <td><%= category.parent.present? ? category.parent.description : "Nenhuma" %></td>
          <td>
            <%= link_to manage_attributes_category_path(category, locale: I18n.locale), 
                        class: "btn btn-sm btn-info ", 
                        title: "Gerenciar campos", 
                        data: { bs_toggle: "tooltip" } do %>
              <i class="bi bi-gear"></i>
            <% end %>
            
            <%= link_to edit_category_path(category, locale: I18n.locale), 
                        class: "btn btn-sm btn-warning", 
                        title: "Editar categoria", 
                        data: { bs_toggle: "tooltip" } do %>
              <i class="bi bi-pencil"></i>
            <% end %>
            
            <%= link_to category_path(category, locale: I18n.locale), 
                        method: :delete, 
                        data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta categoria?" }, 
                        class: "btn btn-sm btn-danger", 
                        title: "Excluir categoria", 
                        data: { bs_toggle: "tooltip" } do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination">
    <ul class="pagination pagination-sm justify-content-center">
      <% if @page > 1 %>
        <li class="page-item">
          <%= link_to '«', categories_path(page: @page - 1), class: 'page-link' %>
        </li>
      <% end %>

      <% (1..@total_pages).each do |p| %>
        <li class="page-item <%= 'active' if p == @page %>">
          <%= link_to p, categories_path(page: p), class: 'page-link' %>
        </li>
      <% end %>

      <% if @page < @total_pages %>
        <li class="page-item">
          <%= link_to '»', categories_path(page: @page + 1), class: 'page-link' %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="actions">
    <%= link_to "Nova Categoria", new_category_path(locale: I18n.locale), class: "btn btn-sm btn-success" %>
  </div>
</div>
