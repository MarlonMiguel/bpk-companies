<div id="categories" class="categories-table">
  <h1><%= t('lists.list_of_categories') %></h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Descrição</th>
        <th>Categoria Pai</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.description %></td>
          <td><%= category.parent.present? ? category.parent.description : "Nenhuma" %></td>
          <td>
            <%= link_to 'Gerenciar campos', manage_attributes_category_path(category, locale: I18n.locale), class: "btn btn-warning" %>   
            <%= link_to "Editar", edit_category_path(category, locale: I18n.locale), class: "btn btn-info" %>
            <%= link_to "Excluir", category_path(category, locale: I18n.locale), 
                method: :delete, 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta categoria?" }, 
                class: "btn btn-danger" %>    
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination">
    <ul class="pagination justify-content-center">
      <% if @page > 1 %>
        <li class="page-item">
          <%= link_to '«', categories_path(page: @page - 1), class: 'page-link' %>
        </li>
      <% end %>

      <% (1..@total_pages).each do |p| %>
        <li class="page-item <%= 'active' if p == @page %>">
          <%= link_to p, categories_path(page: p), class: 'page-link' %>
        </li>
      <% end %>

      <% if @page < @total_pages %>
        <li class="page-item">
          <%= link_to '»', categories_path(page: @page + 1), class: 'page-link' %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="actions">
    <%= link_to "Nova Categoria", new_category_path(locale: I18n.locale), class: "btn btn-success" %>
  </div>
</div>
