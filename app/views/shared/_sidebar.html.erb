<!-- app/views/shared/_sidebar.html.erb -->
  <nav class="navbar navbar-expand-lg navbar-dark" data-controller="dropdown">
    <div class="container-fluid flex-column">
      <div class="collapse navbar-collapse" id="main_nav">
        <ul class="navbar-nav flex-column">
        <% @categories.each do |category| %>
          <% if category.parent_id.nil? %> <!-- Verifica se é uma categoria pai -->
            <%= render_category(category, @categories) %>
          <% end %>
        <% end %>

          <!-- Links de Admin -->
          <% if user_signed_in? && current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Visualizar Categorias', categories_path, class: 'dropdown-item text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Visualizar Atributos', attributes_path, class: 'dropdown-item text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Visualizar Usuários', users_path, class: 'dropdown-item text-white' %>
            </li>
          <% end %>
          
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Visualizar Produto', products_path, class: 'dropdown-item text-white' %>
            </li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>