<div id="attributes" class="attributes-table">
  <h1><%= t('lists.list_of_attributes') %></h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @attributes.each do |attribute| %>
        <tr>
          <td><%= attribute.id %></td>
          <td><%= attribute.description %></td>
          <td><%= attribute.domain %></td>
          <td>
            <%= link_to "Editar", edit_attribute_path(attribute, locale: I18n.locale), class: "btn btn-info" %>
            <%= link_to "Excluir", attribute_path(attribute, locale: I18n.locale), 
                method: :delete, 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta categoria?" }, 
                class: "btn btn-danger" %>        
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination">
    <ul class="pagination justify-content-center">
      <% if @page > 1 %>
        <li class="page-item">
          <%= link_to '«', attributes_path(page: @page - 1), class: 'page-link' %>
        </li>
      <% end %>

      <% (1..@total_pages).each do |p| %>
        <li class="page-item <%= 'active' if p == @page %>">
          <%= link_to p, attributes_path(page: p), class: 'page-link' %>
        </li>
      <% end %>

      <% if @page < @total_pages %>
        <li class="page-item">
          <%= link_to '»', attributes_path(page: @page + 1), class: 'page-link' %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="actions">
    <%= link_to "Novo Atributo", new_attribute_path(locale: I18n.locale), class: "btn btn-success" %>
  </div>
</div>
