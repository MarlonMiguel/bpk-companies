<p style="color: green"><%= notice %></p>

<div id="attributes" class="categories-table">
  <h1><%= t('lists.list_of_attributes') %></h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @attributes.each do |attribute| %>
        <tr>
          <td><%= attribute.id %></td>
          <td><%= attribute.description %></td>
          <td><%= attribute.domain %></td>
          <td>
            <%= link_to "Editar", edit_attribute_path(attribute, locale: I18n.locale), class: "btn btn-info" %>
            <%= link_to "Excluir", attribute_path(attribute, locale: I18n.locale), 
                method: :delete, 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta categoria?" }, 
                class: "btn btn-danger" %>        
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


<%= link_to "New attribute", new_attribute_path(locale: I18n.locale) %>
