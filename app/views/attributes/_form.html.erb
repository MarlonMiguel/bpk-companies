
<div class="container my-4">
  <div class="card">
    <div class="card-header">
      <h5><%= attribute.new_record? ? "Criar Atributo" : "Editar Atributo" %></h5>
    </div>
    <div class="card-body">
      <%= form_with(model: attribute, 
                    url: attribute.persisted? ? attribute_path(attribute, locale: I18n.locale) : 
                    attributes_path(locale: I18n.locale), local: true) do |form| %>

        <div>
          <%= form.label :description, style: "display: block" %>
          <%= form.text_field :description %>
        </div>

        <div class="mb-3">
          <%= form.label :domain, "Tipo" %>
          <%= form.select :domain, [['Moeda', 'N'], ['NÃºmero', 'I'], ['Texto', 'V']], {}, class: "form-select" %>
        </div>

        <div class="card-footer d-flex justify-content-between">
          <%= form.submit "Salvar atributo" %>
          <%= link_to "Voltar", attributes_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
